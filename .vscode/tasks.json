{
  "version": "0.1.0",
  "command": "tsc",
  "isShellCommand": true,
  "tasks": [
    {
      "taskName": "build",
      "suppressTaskName": true,
      "args": ["-w"],
      "showOutput": "always",
      "isWatching": true,
      "isBuildCommand": true,
      "problemMatcher": ["$tsc-watch"]
    },
    {
      "taskName": "build-dist",
      "suppressTaskName": true,
      "args": ["-p", "tsconfig.src.json"],
      "showOutput": "always",
      "isWatching": true
    }
  ]
}
